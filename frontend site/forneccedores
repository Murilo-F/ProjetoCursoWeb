    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script>
        // Código JavaScript para adicionar fornecedores e preencher a tabela

        // Função para adicionar um fornecedor na tabela
        function addSupplierToTable(supplier) {
            var tableBody = document.getElementById('supplierTableBody');
            var row = document.createElement('tr');
            row.innerHTML = `
                <td>${supplier.matricula}</td>
                <td>${supplier.nomeFantasia}</td>
                <td>${supplier.endereco}</td>
                <td>${supplier.telefone}</td>
                <td>${supplier.cnpj}</td>
                <td>${supplier.tempoEntrega}</td>
                <td>${supplier.email}</td>
                <td>
                    <button class="btn btn-primary">Editar</button>
                    <button class="btn btn-danger">Excluir</button>
                </td>
            `;
            tableBody.appendChild(row);
        }

        // Função para limpar os campos do formulário
        function clearFormFields() {
            document.getElementById('supplierMatricula').value = '';
            document.getElementById('supplierName').value = '';
            document.getElementById('supplierAddress').value = '';
            document.getElementById('supplierPhone').value = '';
            document.getElementById('supplierCNPJ').value = '';
            document.getElementById('supplierDeliveryTime').value = '';
            document.getElementById('supplierEmail').value = '';
        }

        // Função para adicionar um novo fornecedor
        function addSupplier(event) {
            event.preventDefault();

            var matricula = document.getElementById('supplierMatricula').value;
            var nomeFantasia = document.getElementById('supplierName').value;
            var endereco = document.getElementById('supplierAddress').value;
            var telefone = document.getElementById('supplierPhone').value;
            var cnpj = document.getElementById('supplierCNPJ').value;
            var tempoEntrega = document.getElementById('supplierDeliveryTime').value;
            var email = document.getElementById('supplierEmail').value;

            var supplier = {
                matricula: matricula,
                nomeFantasia: nomeFantasia,
                endereco: endereco,
                telefone: telefone,
                cnpj: cnpj,
                tempoEntrega: tempoEntrega,
                email: email
            };

            addSupplierToTable(supplier);
            clearFormFields();
        }

        // Event listener para adicionar um novo fornecedor
        var form = document.querySelector('form');
        form.addEventListener('submit', addSupplier);
    </script>
</body>

