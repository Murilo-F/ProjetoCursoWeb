    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script>
        // Código JavaScript para adicionar funcionários e preencher a tabela

        // Função para adicionar um funcionário na tabela
        function addEmployeeToTable(employee) {
            var table = document.querySelector('.table tbody');
            var row = table.insertRow();
            row.innerHTML = `
                <td>${employee.matricula}</td>
                <td>${employee.nome}</td>
                <td>${employee.endereco}</td>
                <td>${employee.telefone}</td>
                <td>${employee.cpf}</td>
                <td>${employee.dataNascimento}</td>
                <td>${employee.situacao}</td>
                <td>${employee.email}</td>
                <td>${employee.cargo}</td>
                <td>${employee.login}</td>
                <td>${employee.senha}</td>
                <td>
                    <button class="btn btn-primary">Editar</button>
                    <button class="btn btn-danger">Excluir</button>
                </td>
            `;
        }

        // Função para limpar os campos do formulário
        function clearFormFields() {
            document.getElementById('employeeMatricula').value = '';
            document.getElementById('employeeName').value = '';
            document.getElementById('employeeAddress').value = '';
            document.getElementById('employeePhone').value = '';
            document.getElementById('employeeCPF').value = '';
            document.getElementById('employeeDOB').value = '';
            document.getElementById('employeeStatus').selectedIndex = 0;
            document.getElementById('employeeEmail').value = '';
            document.getElementById('employeePosition').value = '';
            document.getElementById('employeeLogin').value = '';
            document.getElementById('employeePassword').value = '';
        }

        // Função para adicionar um novo funcionário
        function addEmployee(event) {
            event.preventDefault();

            var matricula = document.getElementById('employeeMatricula').value;
            var nome = document.getElementById('employeeName').value;
            var endereco = document.getElementById('employeeAddress').value;
            var telefone = document.getElementById('employeePhone').value;
            var cpf = document.getElementById('employeeCPF').value;
            var dataNascimento = document.getElementById('employeeDOB').value;
            var situacao = document.getElementById('employeeStatus').value;
            var email = document.getElementById('employeeEmail').value;
            var cargo = document.getElementById('employeePosition').value;
            var login = document.getElementById('employeeLogin').value;
            var senha = document.getElementById('employeePassword').value;

            var employee = {
                matricula: matricula,
                nome: nome,
                endereco: endereco,
                telefone: telefone,
                cpf: cpf,
                dataNascimento: dataNascimento,
                situacao: situacao,
                email: email,
                cargo: cargo,
                login: login,
                senha: senha
            };

            addEmployeeToTable(employee);
            clearFormFields();
        }

        // Event listener para adicionar um novo funcionário
        var form = document.querySelector('form');
        form.addEventListener('submit', addEmployee);
    </script>
