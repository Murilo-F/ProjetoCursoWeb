    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script>
        function exibirMensagemSucesso(mensagem) {
            var alertElement = document.createElement("div");
            alertElement.className = "alert alert-success";
            alertElement.textContent = mensagem;
            var container = document.querySelector(".container");
            container.insertBefore(alertElement, container.firstChild);
        }

        function exibirMensagemErro(mensagem) {
            var alertElement = document.createElement("div");
            alertElement.className = "alert alert-danger";
            alertElement.textContent = mensagem;
            var container = document.querySelector(".container");
            container.insertBefore(alertElement, container.firstChild);
        }

        var sairButton = document.querySelector(".user-info button");
        sairButton.addEventListener("click", function() {
            alert("Você saiu do sistema.");
        });

        var searchForm = document.querySelector(".search-bar");
        searchForm.addEventListener("submit", function(event) {
            event.preventDefault();
            var searchInput = document.querySelector(".search-bar input");
            var searchTerm = searchInput.value;
            console.log("Buscando por: " + searchTerm);
        });

        var viewDetailsButtons = document.querySelectorAll(".card .btn-primary");
        viewDetailsButtons.forEach(function(button) {
            button.addEventListener("click", function(event) {
                var card = event.target.closest(".card");
                var cardTitle = card.querySelector(".card-title").textContent;
                console.log("Detalhes do relatório: " + cardTitle);
                var dataInicial = prompt("Digite a data inicial:");
                var dataFinal = prompt("Digite a data final:");
                console.log("Período: " + dataInicial + " - " + dataFinal);
            });
        });
    </script>
